
@{
	ViewData["Title"] = "Gallery";
}

<script src="~/js/gallery.js" asp-append-version="true" defer></script>
<div class="text-center">
	<h2>Gallery</h2>
</div>

<!-- Button trigger modal -->
@foreach (int i in @Enumerable.Range(1, 6))
{
	<img src=@($"/img/{i}.jpg") class="image" id="1" data-bs-toggle="modal" data-bs-target=@($"#modal{i}") />
}

<div class="modals"></div>	
